{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"strict": true,

		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,

		"types": [
			"bun-types", // add Bun global
			"web"
		],
		"downlevelIteration": true,

		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"target": "ESNext",

		"outDir": "dist",
	}
}